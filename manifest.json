{
    "name": "Lyricfy",
    "version": "1.0",
    "description": "Automatically pull lyrics for spotify!",
    "manifest_version": 2,
    "icons": {
        "128": "lyricfy-128.png"
    },
    "browser_action": {
        "default_icon": "lyricfy.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://open.spotify.com/*"
            ],
            "css": [
                "lyricfy.css"
            ],
            "js": [
                "jquery-3.1.1.min.js",
                "lyricfy.js"
            ]
        }
    ]
}